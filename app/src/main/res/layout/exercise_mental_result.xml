
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/what_is_ezterab_cardview"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="1sp"


        android:clickable="true"

        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="5sp">

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/what_is_ezterab_title"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/tvMessageActivityMargin"
                        android:layout_marginRight="@dimen/tvMessageActivityMargin"
                        android:layout_weight="1"

                        android:gravity="right|center"
                        android:text="نتیجه پرسشنامه"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/list_title_text" />
                </TableRow>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/what_is_ezterab_expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5sp"
        android:layout_marginStart="5sp"
        app:ael_duration="500"
        app:ael_expanded="true"
        app:ael_interpolator="bounce"
        app:ael_orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/what_is_ezterab_cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:paddingBottom="5sp"
                        android:paddingTop="5sp"
                        android:paddingEnd="10sp">

                        <com.codesgood.views.JustifiedTextView
                            android:id="@+id/alert_title"
                            android:padding="3dp"
                            android:textColor="@color/White"
                            android:background="@drawable/exercise_mental_text_effect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"></com.codesgood.views.JustifiedTextView>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="5sp"
                        android:paddingEnd="10sp">

                        <com.codesgood.views.JustifiedTextView
                            android:id="@+id/alert_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"></com.codesgood.views.JustifiedTextView>

                    </TableRow>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

</LinearLayout>
