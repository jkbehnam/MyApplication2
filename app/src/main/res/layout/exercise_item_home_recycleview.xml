<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_be_intelligent"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:layout_margin="3dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="2dp">

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView

                        android:id="@+id/main_sport_imageView"
                        android:layout_width="24dip"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:srcCompat="@drawable/previous_step" />

                    <TextView
                        android:id="@+id/main_sport_title"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:text="عنوان پیام"
                        android:textColor="#404040"
                        android:textSize="@dimen/main_list_textZise" />

                    <ImageView
                        android:id="@+id/home_card_image"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp"
                        android:tint="@color/chart_not_worn_light"
                        app:srcCompat="@drawable/exercise_icon_profile_navigationbar" />
                </TableRow>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
