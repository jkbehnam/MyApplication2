<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bd161d"
    tools:context="tapesh_exercise.activities.Login_acirivty"
    xmlns:fbutton="http://schemas.android.com/tools">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/photo_2018" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نام کاربری"
            android:paddingEnd="24dp"
            app:backgroundTint="@color/white"
            android:paddingStart="24dp"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextLabel"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="254dp">

            <EditText
                android:id="@+id/et_username"
                android:textSize="@dimen/list_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                app:backgroundTint="@color/white"

                android:inputType="text"
                android:textColor="@color/White" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/text_input_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="گذرواژه"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextLabel"
            tools:ignore="MissingConstraints"
            android:gravity="right"

            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="311dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_title_text"
                android:clickable="true"
                android:inputType="text"
android:gravity="right"
                app:backgroundTint="@color/white"
                android:textColor="@color/White" />

        </android.support.design.widget.TextInputLayout>

        <info.hoang8f.widget.FButton
            android:id="@+id/btnLoginActivityLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:text="ورود"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/list_title_text"
            app:fButtonColor="@color/White"
            fbutton:buttonColor="#ffffff"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="@color/colorPrimaryDark"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp" />
    </LinearLayout>


</LinearLayout>
